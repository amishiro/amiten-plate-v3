{
  "compilerOptions": {
    "target": "esnext",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["./vite/*"]
    }
  },
  "include": [
    "vite/**/*.ts",
    "vite/**/*.d.ts",
    "vite/**/*.tsx",
    "vite/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
